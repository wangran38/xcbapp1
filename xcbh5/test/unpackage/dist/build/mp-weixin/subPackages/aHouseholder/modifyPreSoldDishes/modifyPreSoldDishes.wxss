.container{padding:32rpx;background:#f8fffc;min-height:100vh}.product-header{margin-bottom:48rpx}.product-header .product-name{display:block;font-size:40rpx;color:#2b593e;font-weight:600;line-height:1.4;margin-bottom:16rpx}.product-header .decorative-line{width:80rpx;height:6rpx;background:#8dc9b2;border-radius:3rpx}.form-container{background:#fff;border-radius:24rpx;box-shadow:0 8rpx 32rpx rgba(141,201,178,.1);padding:0 32rpx}.form-item{padding:40rpx 0;border-bottom:2rpx solid #f0f7f3}.form-item:last-child{border-bottom:none}.form-item .item-header{display:flex;align-items:center;margin-bottom:32rpx}.form-item .item-header .icon{width:48rpx;height:48rpx;margin-right:24rpx}.form-item .item-header .label{font-size:32rpx;color:#2b593e;font-weight:500}.input-group{display:flex;align-items:center;height:96rpx;background:#e6f4ec;border-radius:16rpx;padding:0 32rpx}.input-group .currency{font-size:40rpx;color:#8dc9b2;margin-right:16rpx}.input-group .price-input{flex:1;font-size:36rpx;color:#2b593e;height:100%}.stock-input{height:96rpx;background:#e6f4ec;border-radius:16rpx;padding:0 32rpx;font-size:32rpx;color:#2b593e}.unit-picker .picker-content{height:96rpx;background:#e6f4ec;border-radius:16rpx;padding:0 32rpx;display:flex;align-items:center;justify-content:space-between;font-size:32rpx;color:#2b593e}.unit-picker .picker-content .arrow{width:32rpx;height:32rpx}.switch-item .item-header{margin-bottom:0}.submit-container{margin-top:64rpx;padding:0 32rpx}.submit-container .submit-btn{height:96rpx;line-height:96rpx;background:linear-gradient(135deg,#8dc9b2,#7bcfa9);color:#fff;border-radius:64rpx;font-size:34rpx;font-weight:500;box-shadow:0 8rpx 24rpx rgba(141,201,178,.3)}.submit-container .submit-btn::after{border:none}.submit-container .submit-btn:active{opacity:.9}