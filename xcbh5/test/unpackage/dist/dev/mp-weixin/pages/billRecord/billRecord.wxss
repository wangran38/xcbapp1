/* 水平间距 */
page {
  background-color: #F5F7FA;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.custom-navbar {
  padding: 0 30rpx;
}
.custom-navbar .nav-title {
  color: #fff;
  font-size: 18px;
  line-height: 44rpx;
  font-weight: 500;
}
.filter-card {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}
.filter-card .filter-group {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}
.filter-card .filter-group .filter-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}
.filter-card .filter-group .filter-btn uni-icons {
  margin-right: 8rpx;
}
.stats-card {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  display: flex;
}
.stats-card .stat-item {
  flex: 1;
  padding: 30rpx;
}
.stats-card .stat-item:first-child {
  border-right: 2rpx solid #eee;
}
.stats-card .stat-item .stat-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.stats-card .stat-item .stat-value {
  font-size: 32rpx;
  font-weight: 500;
}
.stats-card .stat-item .stat-value.income {
  color: #409EFF;
}
.stats-card .stat-item .stat-value.expense {
  color: #F56C6C;
}
.list-container {
  margin: 0 20rpx;
}
.list-container .empty-state {
  text-align: center;
  padding: 100rpx 0;
}
.list-container .empty-state image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}
.list-container .empty-state .empty-text {
  color: #999;
  font-size: 28rpx;
}
.loading-state {
  padding: 30rpx 0;
  text-align: center;
}
.loading-state .loading-text {
  color: #666;
  font-size: 28rpx;
}
.loading-state .no-more {
  color: #999;
  font-size: 24rpx;
}
.float-button {
  position: fixed;
  right: 40rpx;
  bottom: calc(120rpx + constant(safe-area-inset-bottom));
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background: #409EFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(64, 158, 255, 0.3);
  z-index: 100;
}
/* 修复uni-list-item样式 */
uni-list-item {
  margin: 12rpx 0;
  border-radius: 16rpx !important;
}
uni-list-item::after {
  display: none !important;
}
uni-list-item .uni-list-item__container {
  padding: 24rpx !important;
}

