  background: rgba(58, 95, 124, 0.3);
  border-radius: 2rpx;
}
/* 步骤条样式 */
.steps.data-v-34fd0f64 {
  margin-bottom: 60rpx;
}
/* 提示文本 */
.tip-text.data-v-34fd0f64 {
  background: #EDF2F5;
  padding: 24rpx 32rpx;
  border-radius: 8rpx;
  color: #4A6572;
  font-size: 28rpx;
  margin-bottom: 40rpx;
  line-height: 1.6;
  display: flex;
  align-items: flex-start;
}
/* 表单卡片 */
.form-card.data-v-34fd0f64 {
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid #E9ECEF;
  background: #FFFFFF;
}
.card-header.data-v-34fd0f64 {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.card-title.data-v-34fd0f64 {
  font-size: 32rpx;
  color: #2D3A4A;
  margin-right: 16rpx;
  font-weight: 500;
}
/* 选择器样式 */
.area-picker.data-v-34fd0f64, .category-picker.data-v-34fd0f64 {
  padding: 32rpx 0;
}
.picker-content.data-v-34fd0f64 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  color: #4A6572;
  padding: 24rpx 0;
}
/* 表单项 */
.form-item.data-v-34fd0f64 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
}
.item-label.data-v-34fd0f64 {
  font-size: 30rpx;
  color: #4A6572;
  width: 160rpx;
  font-weight: 400;
}
.input-box.data-v-34fd0f64 {
  flex: 1;
  font-size: 30rpx;
  color: #2D3A4A;
  text-align: right;
  padding: 20rpx 0;
}
