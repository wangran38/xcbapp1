.container.data-v-34fd0f64 {
  padding: 40rpx 32rpx;
  background: #F8F9FA;
  min-height: 100vh;
}
/* 头部样式 */
.header.data-v-34fd0f64 {
  margin-bottom: 60rpx;
}
.title.data-v-34fd0f64 {
  font-size: 38rpx;
  color: black;
  font-weight: 500;
  position: relative;
  display: inline-block;
  letter-spacing: 1rpx;
}
.decorate-line.data-v-34fd0f64 {
  position: absolute;
  bottom: -12rpx;
  left: 0;
  width: 70%;
