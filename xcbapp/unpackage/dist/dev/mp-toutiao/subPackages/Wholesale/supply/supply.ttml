<view class="supply-container"><view class="filter-section"><view class="search-bar"><input class="search-input" type="text" placeholder="请输入关键字" data-event-opts="{{[['input',[['__set_model',['','searchText','$event',[]]]]]]}}" value="{{searchText}}" bindinput="__e"/><button data-event-opts="{{[['tap',[['handleSearch',['$event']]]]]}}" class="search-btn" bindtap="__e">搜索</button><button data-event-opts="{{[['tap',[['handleReset',['$event']]]]]}}" class="reset-btn" bindtap="__e">重置</button></view><view class="filter-group"><picker range="{{categories}}" range-key="label" data-event-opts="{{[['change',[['categoryChange',['$event']]]]]}}" bindchange="__e"><view class="filter-btn">{{''+categories[selectedCategoryIndex].label+''}}</view></picker><picker range="{{distances}}" range-key="label"><view class="filter-btn">{{''+distances[selectedDistanceIndex].label+''}}</view></picker></view></view><scroll-view class="goods-list" scroll-y="{{true}}" scroll-with-animation="{{true}}" data-event-opts="{{[['scrolltolower',[['loadMore',['$event']]]]]}}" bindscrolltolower="__e"><view class="goods-grid"><block tt:for="{{goodsList}}" tt:for-item="item" tt:for-index="index" tt:key="index"><view data-event-opts="{{[['tap',[['goDetail',['$0'],[[['goodsList','',index,'id']]]]]]]}}" class="goods-card" bindtap="__e"><view class="image-container"><image class="goods-image" src="{{item.selllogo}}" mode="aspectFill" lazy-load="{{true}}"></image><block tt:if="{{item.tag}}"><view class="goods-tag">{{''+item.tag+''}}</view></block></view><view class="goods-content"><text class="goods-title">{{item.selltitle}}</text><view class="price-section"><text class="current-price">{{"￥"+item.marketprice}}</text><block tt:if="{{item.price}}"><text class="original-price">{{'￥'+item.price+''}}</text></block></view><view class="action-bar"><view class="sales-info"><uni-icons vue-id="{{'e3b05532-1-'+index}}" type="shop" size="12" color="#666" bind:__l="__l"></uni-icons><text>{{item.stoptime+"人付款"}}</text></view><view data-event-opts="{{[['tap',[['contactNow',['$event']]]]]}}" class="contact-btn" catchtap="__e"><text>询底价</text><uni-icons vue-id="{{'e3b05532-2-'+index}}" type="arrow-right" size="14" color="#fff" bind:__l="__l"></uni-icons></view></view><view class="location-info"><uni-icons vue-id="{{'e3b05532-3-'+index}}" type="location" size="12" color="#666" bind:__l="__l"></uni-icons><text>{{item.selladdress}}</text></view></view></view></block></view><view class="load-status"><block tt:if="{{loading}}"><text class="loading-text">加载中...</text></block><block tt:else><block tt:if="{{noMore}}"><text class="no-more">—— 没有更多了 ——</text></block></block></view></scroll-view></view>