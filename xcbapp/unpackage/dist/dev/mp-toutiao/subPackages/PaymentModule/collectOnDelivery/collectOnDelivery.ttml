<view class="order-detail-page"><view class="header"><view data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="back-btn" bindtap="__e"><text class="iconfont icon-fanhui"></text></view><text class="title">订单详情</text></view><view class="order-base-info"><view><text class="info-label">订单编号：</text><text class="order-id">{{out_trade_no}}</text></view><view><text class="info-label">下单时间：</text><text class="order-time">{{$root.m0}}</text></view></view><view class="product-info"><view class="product-list"><block tt:for="{{productList}}" tt:for-item="product" tt:for-index="index" tt:key="index"><view class="product-item"><image class="product-img" src="{{product.imglogo}}"></image><view class="product-details"><text class="product-name">{{product.goodsname}}</text><text class="product-quantity">{{product.price+"￥×"+product.goodsnum+"斤"}}</text></view></view></block></view></view><view class="order-amount-info"><view class="total-price"><text class="amount-label">菜品总价：</text><text class="price-value">{{totalPrice+" 元"}}</text></view><view class="other-fees"><text class="amount-label">其他费用：</text><text class="price-value">{{otherFees+" 元"}}</text></view><view class="total-amount"><text class="amount-label">应付总额：</text><text class="price-value amount-total">{{totalAmount+" 元"}}</text></view></view><view class="payment-methods"><block tt:for="{{paymentMethods}}" tt:for-item="method" tt:for-index="index" tt:key="index"><view data-event-opts="{{[['tap',[['selectPaymentMethod',['$0'],[[['paymentMethods','',index]]]]]]]}}" class="{{(('payment-method-item')+' '+((selectedPaymentMethod===method.code)?'active':''))}}" bindtap="__e"><block tt:if="{{method.title=='积分支付'}}"><uni-icons vue-id="{{'e9880992-1-'+index}}" fontFamily="MyIconFont" size="{{26}}" color="#ee6770;" bind:__l="__l" vue-slots="{{['default']}}"></uni-icons></block><block tt:if="{{method.title=='微信支付'}}"><uni-icons vue-id="{{'e9880992-2-'+index}}" fontFamily="MyIconFont" size="{{26}}" color="#09bb07;" bind:__l="__l" vue-slots="{{['default']}}"></uni-icons></block><block tt:if="{{method.title=='数字人民币'}}"><uni-icons vue-id="{{'e9880992-3-'+index}}" fontFamily="MyIconFont" size="{{26}}" color="#ffd345;" bind:__l="__l" vue-slots="{{['default']}}"></uni-icons></block><text class="payment-name">{{method.title}}</text></view></block></view><view class="payment-btn-area"><button type="primary" disabled="{{isTimeOut||!selectedPaymentMethod}}" open-type="getAuthorize" data-event-opts="{{[['tap',[['prepay',['$event']]]]]}}" bindtap="__e">{{isPayment?'已支付':'立即付款'}}</button></view><view class="payment-tips"><text>{{"请在"+countDownTime+"分钟内完成支付，逾期未支付订单将自动取消哦~"}}</text></view><view class="countdown-area"><text class="countdown-text">{{"剩余时间："+formattedCountDown}}</text></view></view>