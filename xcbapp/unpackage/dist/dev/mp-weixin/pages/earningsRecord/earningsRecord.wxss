
/* 页面容器 */
.reward-page.data-v-2fd53ada {
  background-color: #f5f5f7;
  min-height: 100vh;
  font-size: 14px;
}

/* 导航栏 */
.navbar.data-v-2fd53ada {
  height: 48px;
  background-color: #409EFF;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.nav-title.data-v-2fd53ada {
  color: #ffffff;
  font-size: 18px;
  font-weight: 500;
}

/* 收益概览卡片 */
.overview-card.data-v-2fd53ada {
  background-color: #ffffff;
  margin: 15px;
  border-radius: 12px;
  padding: 20px;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}
.overview-item.data-v-2fd53ada {
  flex: 1;
  text-align: center;
}
.overview-label.data-v-2fd53ada {
  color: #666666;
  font-size: 14px;
}
.overview-value.data-v-2fd53ada {
  color: #333333;
  font-size: 22px;
  font-weight: bold;
  display: block;
  margin-top: 8px;
}
.today-value.data-v-2fd53ada {
  color: #409EFF;
}

/* 说明文字 */
.explanation.data-v-2fd53ada {
  padding: 0 15px 10px;
  color: #666666;
  font-size: 13px;
}

/* 奖励明细列表 */
.reward-list.data-v-2fd53ada {
  margin-top: 10px;
  height: calc(100vh - 48px - 130px - 30px);
}
.list-item.data-v-2fd53ada {
  background-color: #ffffff;
  padding: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
}
.item-left.data-v-2fd53ada {
  display: flex;
  align-items: center;
}
.invite-icon.data-v-2fd53ada {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  color: #ffffff;
  font-weight: bold;
  background-color: #52c41a;
}
.item-info.data-v-2fd53ada {
  display: flex;
  flex-direction: column;
}
.item-title.data-v-2fd53ada {
  color: #333333;
  font-size: 15px;
  margin-bottom: 4px;
}
.item-time.data-v-2fd53ada, .item-from.data-v-2fd53ada {
  color: #999999;
  font-size: 12px;
  line-height: 1.5;
}
.item-amount.data-v-2fd53ada {
  color: #f5222d;
  font-size: 16px;
  font-weight: 500;
}

/* 空状态 */
.empty-state.data-v-2fd53ada {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 200px;
  color: #999999;
  padding: 0 20px;
  text-align: center;
}
.empty-text.data-v-2fd53ada {
  font-size: 15px;
  margin-bottom: 8px;
}
.empty-hint.data-v-2fd53ada {
  font-size: 13px;
  line-height: 1.5;
}
