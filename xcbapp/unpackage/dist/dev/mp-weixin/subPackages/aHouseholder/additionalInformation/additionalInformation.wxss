
/* 整体页面样式 */
.profile-page.data-v-f8b86b55 {
	padding: 40rpx 30rpx;
	background: linear-gradient(135deg, #f9f9f9 0%, #eef2f5 100%);
	min-height: 100vh;
}
.page-title.data-v-f8b86b55 {
	display: block;
	text-align: center;
	font-size: 36rpx;
	font-weight: 600;
	color: #2c3e50;
	margin: 40rpx 0;
	letter-spacing: 2rpx;
}

/* 表单容器 */
.form-container.data-v-f8b86b55 {
	border-radius: 24rpx;
	background: rgba(255,255,255,0.95);
	box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.06);
	padding: 20rpx 0;
}

/* 表单项 */
.form-item.data-v-f8b86b55 {
	padding: 32rpx 40rpx;
	display: flex;
	align-items: center;
	border-bottom: 2rpx solid #f1f3f6;
}
.form-item.data-v-f8b86b55:last-child {
	border-bottom: none;
}

/* 标签样式 */
.form-label.data-v-f8b86b55 {
	width: 180rpx;
	font-size: 30rpx;
	color: #5a6573;
	font-weight: 500;
	flex-shrink: 0;
}

/* 输入框样式 */
.form-input.data-v-f8b86b55 {
	flex: 1;
	padding: 24rpx 32rpx;
	border-radius: 16rpx;
	background: #f8fafc;
	border: 2rpx solid #e8eef3;
	font-size: 28rpx;
	color: #34495e;
	transition: all 0.3s ease;
}
.form-input.data-v-f8b86b55:focus {
	outline: none;
	border-color: #4dabf7;
	box-shadow: 0 0 12rpx rgba(77, 171, 247, 0.2);
}

/* 头像上传区域 */
.avatar-item.data-v-f8b86b55 {
	position: relative;
	padding: 40rpx;
}
.avatar-wrapper.data-v-f8b86b55 {
	width: 160rpx;
	height: 160rpx;
	border-radius: 24rpx;
	background: #f8fafc;
	border: 4rpx dashed #e8eef3;
	display: flex;
	align-items: center;
	justify-content: center;
	overflow: hidden;
	transition: all 0.3s ease;
}
.avatar-image.data-v-f8b86b55 {
	width: 100%;
	height: 100%;
	object-fit: cover;
}
.avatar-placeholder.data-v-f8b86b55 {
	color: #aeb8c4;
	padding: 24rpx;
	border-radius: 16rpx;
	transition: transform 0.2s ease;
}
.avatar-placeholder.data-v-f8b86b55:active {
	transform: scale(0.95);
}

/* 提交按钮 */
.submit-btn.data-v-f8b86b55 {
	background: linear-gradient(135deg, #4dabf7 0%, #339af0 100%);
	color: white;
	font-size: 32rpx;
	font-weight: 500;
	height: 96rpx;
	line-height: 96rpx;
	border-radius: 16rpx;
	box-shadow: 0 8rpx 24rpx rgba(51, 154, 240, 0.3);
	transition: all 0.3s ease;
}
.submit-btn.data-v-f8b86b55:active {
	transform: translateY(2rpx);
	box-shadow: 0 4rpx 16rpx rgba(51, 154, 240, 0.3);
}
.button-container.data-v-f8b86b55 {
	padding: 60rpx 40rpx 40rpx;
}
